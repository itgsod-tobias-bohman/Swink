#notificationsModal.modal.fade aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1"
  .modal-dialog
    .modal-content
      .modal-header
        button.close aria-label="Close" data-dismiss="modal" type="button"
          span aria-hidden="true"  &times;
        h4#myModalLabel.modal-title Email Notifications
      .modal-body
        p Do you want email notifications with updates?
        form#notifications-form action='/change_notifications' method='post' role='form' style=('display: block;')
          .form-group
            input name="notifications" type="radio" value="yes"
              |   Yes
            input name="notifications" type="radio" value="no"
              |   No
          .form-group
            input#notification-submit.form-control.btn.btn-success.btn-notifications name='notifications-submit' type='submit' value=('Save Changes')
#deleteModal.modal.fade aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1"
