#emailModal.modal.fade aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1"
  .modal-dialog
    .modal-content
      .modal-header
        button.close aria-label="Close" data-dismiss="modal" type="button"
          span aria-hidden="true"  &times;
        h4#myModalLabel.modal-title Changing Email
      .modal-body
        form#email-form action='/change_email' method='post' role='form' style=('display: block;')
          .form-group
            input#email.form-control name='email' placeholder='New Email' tabindex='1' type='email' value='' required=''
          .form-group
            input#email.form-control name='email-confirmation' placeholder='Confirm Email' tabindex='1' type='email' value='' required=''
          .form-group
            input#password.form-control name='password' placeholder='Password' tabindex='2' type='password' required=''
          .form-group
            input#email-submit.form-control.btn.btn-success.btn-email name='email-submit' type='submit' value=('Change Email')
